<?xml version="1.0" encoding="utf-8"?>
<com.mazzeom.app.armstrong.root.main.profile_tab.ProfileTabView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <TextView
      android:id="@+id/profileSaveButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="SAVE"
      android:textColor="@color/white"
      android:layout_gravity="right"
      android:layout_marginTop="10dp"
      android:layout_marginRight="10dp"
      android:paddingVertical="5dp"
      android:paddingHorizontal="10dp"
      android:gravity="center"
      android:textAlignment="center"/>

  <TextView
      android:id="@+id/profileImageText"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:layout_gravity="center"
      android:layout_marginTop="60dp"
      android:background="@drawable/sign_in_profile_item_image_bg"
      android:textAlignment="center"
      android:gravity="center"
      android:textColor="@color/white"
      android:textSize="42sp"/>

  <EditText
      android:id="@+id/profileNickNameEditText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="60dp"
      android:layout_marginHorizontal="30dp"
      android:paddingVertical="5dp"
      android:paddingHorizontal="10dp"
      android:inputType="text"
      android:hint="Insert Nickname"
      android:textColorHint="@color/edit_text_hint_color"
      android:textColor="@color/white"
      android:background="@drawable/edit_text_background"
      android:textCursorDrawable="@drawable/edit_text_cursor"
      android:maxLength="20"
      android:focusableInTouchMode="true"
      android:clickable="true"
      android:focusable="true"/>

  <TextView
    android:id="@+id/logoutTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="20dp"
    android:paddingHorizontal="20dp"
    android:paddingTop="5dp"
    android:text="Logout"
    android:textSize="16sp"
    android:textColor="@color/category2"/>

</com.mazzeom.app.armstrong.root.main.profile_tab.ProfileTabView>