<?xml version="1.0" encoding="utf-8"?>
<com.mazzeom.app.armstrong.root.main.daily_tab.weekday.monday.MondayView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:paddingTop="48dp">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="풀업 5세트"
		android:textFontWeight="500"
		android:textColor="@color/category1"
		android:textSize="20sp"
		android:layout_marginLeft="24dp"
		android:layout_marginBottom="12dp"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="최대 반복 횟수, 쉬는 시간: 90초"
		android:layout_marginLeft="24dp"
		android:textColor="@color/category2"
		android:layout_marginBottom="12dp"
		android:textSize="16sp" />

	<com.google.android.flexbox.FlexboxLayout
		android:id="@+id/pullUpFlexboxLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:flexDirection="row"
		app:justifyContent="space_around"
		app:alignItems="center" />


</com.mazzeom.app.armstrong.root.main.daily_tab.weekday.monday.MondayView>