<?xml version="1.0" encoding="utf-8"?>
<com.mazzeom.app.armstrong.root.main.daily_tab.weekday.tuesday.TuesdayView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:paddingTop="48dp">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="피라미드 루틴"
		android:textFontWeight="500"
		android:textColor="@color/category1"
		android:textSize="20sp"
		android:layout_marginLeft="24dp"
		android:layout_marginBottom="12dp"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="세트당 1회씩 증가, 쉬는 시간 : 세트 당 횟수 X 10초"
		android:layout_marginLeft="24dp"
		android:textColor="@color/category2"
		android:layout_marginBottom="12dp"
		android:textSize="16sp"/>

	<com.google.android.flexbox.FlexboxLayout
		android:id="@+id/pullUpFlexboxLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:flexDirection="row"
		app:alignItems="center"
		app:flexWrap="wrap"
		android:layout_marginHorizontal="20dp"/>


</com.mazzeom.app.armstrong.root.main.daily_tab.weekday.tuesday.TuesdayView>